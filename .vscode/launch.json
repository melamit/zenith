    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Run development server",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "task",
                "dev"
            ],
            "outputCapture": "std",
            "attachSimplePort": 3000
        },
        {
            "request": "launch",
            "name": "Build project",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "task",
                "build"
            ],
            "outputCapture": "std",
        },
        {
            "request": "launch",
            "name": "Run preview server",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "task",
                "start"
            ],
            "outputCapture": "std",
            "attachSimplePort": 3000
        },
        {
            "request": "launch",
            "name": "Run linter",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "task",
                "lint"
            ],
            "outputCapture": "std"
        }
    ]
}